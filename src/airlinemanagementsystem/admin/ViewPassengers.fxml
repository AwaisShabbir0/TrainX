<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="airlinemanagementsystem.admin.ViewPassengersController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label styleClass="header-label" text="Passenger List" />
        <Button onAction="#handleAddPassenger" styleClass="button" text="+ Add New Passenger" />
    </HBox>

    <TableView fx:id="passengersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
            <TableColumn fx:id="colNationality" prefWidth="100.0" text="Nationality" />
            <TableColumn fx:id="colPhone" prefWidth="120.0" text="Phone" />
            <TableColumn fx:id="colAddress" prefWidth="200.0" text="Address" />
            <TableColumn fx:id="colCNIC" prefWidth="150.0" text="CNIC" />
            <TableColumn fx:id="colGender" prefWidth="80.0" text="Gender" />
            <TableColumn fx:id="colAction" prefWidth="100.0" text="Action" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT">
        <Button onAction="#handleBack" style="-fx-background-color: gray;" styleClass="button" text="Back to Dashboard" />
    </HBox>
</VBox>
