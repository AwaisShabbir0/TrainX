<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="airlinemanagementsystem.admin.TrainDetailsController">
    <top>
        <Label styleClass="header-label" text="Train Details (Admin View)" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </Label>
    </top>
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <TableView fx:id="trainTable" VBox.vgrow="ALWAYS">
                <columns>
                     <!-- Columns will be added dynamically or defined here if we know schema -->
                     <TableColumn fx:id="colTrainCode" text="Train Code" />
                     <TableColumn fx:id="colTrainName" text="Train Name" />
                     <TableColumn fx:id="colSource" text="Source" />
                     <TableColumn fx:id="colDest" text="Destination" />
                     <TableColumn fx:id="colFair" text="Fair" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER">
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
            <Button onAction="#handleBack" style="-fx-background-color: gray;" styleClass="button" text="Back to Dashboard" />
        </VBox>
    </bottom>
</BorderPane>
