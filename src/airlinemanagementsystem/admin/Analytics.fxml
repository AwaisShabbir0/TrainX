<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="airlinemanagementsystem.admin.AnalyticsController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #E1FFE1; -fx-padding: 20;">
            <Label styleClass="header-label" text="Dashboard Analytics" />
            <HBox HBox.hgrow="ALWAYS" />
            <Button onAction="#handleRefresh" styleClass="button" text="Refresh Data" />
        </HBox>
    </top>
    
    <center>
        <GridPane alignment="CENTER" hgap="30.0" vgap="30.0">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
            
            <!-- Card 1: Revenue -->
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #4CAF50; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="Total Revenue" />
                <Label fx:id="lblRevenue" style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;" text="PKR 0" />
            </VBox>

            <!-- Card 2: Bookings -->
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #2196F3; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="Total Bookings" />
                <Label fx:id="lblBookings" style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;" text="0" />
            </VBox>

            <!-- Card 3: Passengers -->
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #FF9800; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="Total Passengers" />
                <Label fx:id="lblPassengers" style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;" text="0" />
            </VBox>

            <!-- Card 4: Trains -->
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #9C27B0; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="Active Trains" />
                <Label fx:id="lblTrains" style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;" text="0" />
            </VBox>
            
        </GridPane>
    </center>
    
    <bottom>
         <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Button onAction="#handleBack" style="-fx-background-color: gray;" styleClass="button" text="Back to Dashboard" />
         </HBox>
    </bottom>
</BorderPane>
