<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="airlinemanagementsystem.admin.EditTrainController">
    <top>
        <Label styleClass="header-label" text="Edit Train Details" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="20.0" left="40.0" top="20.0" />
            </padding>
        </Label>
    </top>
    
    <left>
         <VBox alignment="CENTER" spacing="20.0">
             <padding>
                 <Insets left="50.0" right="20.0" />
             </padding>
            <ImageView fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../icons/train_icon.png" />
                </image>
            </ImageView>
         </VBox>
    </left>
    
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
            
            <GridPane hgap="20.0" vgap="15.0">
                <Label text="Train Code:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="trainCodeField" editable="false" style="-fx-background-color: #f0f0f0;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                
                <Label text="Train Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="trainNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                
                <Label text="Source:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="sourceField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                
                <Label text="Destination:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="destField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Departure Time:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="depTimeField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Arrival Time:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="arrTimeField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                
                <Label text="Ticket Price (PKR):" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextField fx:id="fairField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            </GridPane>
            
            <HBox alignment="CENTER" spacing="20.0">
                <Button onAction="#handleUpdate" styleClass="button, button-accent" text="Update Train" />
                <Button onAction="#handleCancel" styleClass="button" style="-fx-background-color: gray;" text="Cancel" />
            </HBox>
            
        </VBox>
    </center>
</BorderPane>
