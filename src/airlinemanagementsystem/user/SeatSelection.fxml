<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="airlinemanagementsystem.user.SeatSelectionController">
    <top>
        <Label fx:id="headerLabel" styleClass="header-label" text="Select Seats" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </Label>
    </top>
    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <GridPane fx:id="seatGrid" alignment="CENTER" hgap="10.0" vgap="10.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <!-- Seats will be added dynamically -->
                </GridPane>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label fx:id="statusLabel" text="Selected: 0" />
            <Button onAction="#handleConfirm" styleClass="button" text="Confirm Selection" />
            <Button onAction="#handleCancel" style="-fx-background-color: gray;" styleClass="button" text="Cancel" />
        </HBox>
    </bottom>
</BorderPane>
