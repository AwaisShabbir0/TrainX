<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane style="-fx-background-color: -secondary-color;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="airlinemanagementsystem.user.TicketController">
    <top>
        <Label styleClass="header-label" text="Download Ticket" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </Label>
    </top>
    <center>
        <HBox alignment="CENTER" spacing="50.0">
            <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="30.0" left="50.0" right="50.0" top="10.0" />
            </padding>
            <HBox alignment="CENTER" spacing="10.0">
                <Label styleClass="label" text="PNR Details:" />
                <TextField fx:id="pnrField" promptText="Enter PNR" />
                <Button onAction="#handleFetch" styleClass="button" text="Fetch" />
            </HBox>

            <GridPane alignment="CENTER" hgap="20.0" vgap="15.0">
                <Label styleClass="label" text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="nameLabel" styleClass="label" text="---" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label styleClass="label" text="Nationality:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label fx:id="nationalityLabel" styleClass="label" text="---" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label styleClass="label" text="Source:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Label fx:id="srcLabel" styleClass="label" text="---" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                <Label styleClass="label" text="Destination:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Label fx:id="destLabel" styleClass="label" text="---" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                <Label styleClass="label" text="Train Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label fx:id="trainNameLabel" styleClass="label" text="---" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label styleClass="label" text="Train Code:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <Label fx:id="trainCodeLabel" styleClass="label" text="---" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                <Label styleClass="label" text="Travel Date:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <Label fx:id="dateLabel" styleClass="label" text="---" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </GridPane>

            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="btnGeneratePDF" disable="true" onAction="#handleGeneratePDF" styleClass="button" text="Generate PDF" />
                <Button onAction="#handleBack" styleClass="button" style="-fx-background-color: gray;" text="Back" />
            </HBox>
        </VBox>
        <VBox alignment="CENTER">
            <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                 <image>
                    <Image url="@../icons/download_icon.png" />
                 </image>
            </ImageView>
        </VBox>
      </HBox>
    </center>
</BorderPane>
