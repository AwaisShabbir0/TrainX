<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="railwaymanagementsystem.admin.EditPassengerController">
    <top>
        <Label styleClass="header-label" text="Edit Passenger Details" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="20.0" left="40.0" top="20.0" />
            </padding>
        </Label>
    </top>
    
    <left>
         <VBox alignment="CENTER" spacing="20.0">
             <padding>
                 <Insets left="50.0" right="20.0" />
             </padding>
            <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../icons/passenger_icon.png" />
                </image>
            </ImageView>
         </VBox>
    </left>
    
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
            
            <GridPane hgap="20.0" vgap="15.0">
                <Label text="CNIC (ID):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="cnicField" editable="false" style="-fx-background-color: #f0f0f0;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                
                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                
                <Label text="Nationality:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="nationalityField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                
                <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="genderField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </GridPane>
            
            <HBox alignment="CENTER" spacing="20.0">
                <Button onAction="#handleUpdate" styleClass="button, button-accent" text="Update Passenger" />
                <Button onAction="#handleCancel" styleClass="button" style="-fx-background-color: gray;" text="Cancel" />
            </HBox>
            
        </VBox>
    </center>
</BorderPane>
