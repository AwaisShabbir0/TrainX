<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #E1FFE1;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="railwaymanagementsystem.LoginController">
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>

    <VBox alignment="CENTER" spacing="10">
        <ImageView fitHeight="150.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@icons/trainx_logo.png" />
            </image>
        </ImageView>
        <Label styleClass="header-label" text="Login to TrainX" />
    </VBox>

    <VBox maxWidth="400.0" spacing="15.0">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label styleClass="label" text="Select Role:" minWidth="100.0" />
            <ComboBox fx:id="roleChoice" prefWidth="250.0" promptText="Select Role" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label styleClass="label" text="Username:" minWidth="100.0" />
            <TextField fx:id="usernameField" prefWidth="250.0" promptText="Enter Username" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label styleClass="label" text="Password:" minWidth="100.0" />
            <PasswordField fx:id="passwordField" prefWidth="250.0" promptText="Enter Password" />
        </HBox>

        <HBox alignment="CENTER" spacing="15.0">
            <Button fx:id="loginButton" defaultButton="true" onAction="#handleLogin" styleClass="button" text="Login" prefWidth="120.0" />
            <Button fx:id="signupButton" onAction="#handleSignup" styleClass="button, button-accent" text="Sign Up" prefWidth="120.0" />
        </HBox>
    </VBox>
</VBox>
